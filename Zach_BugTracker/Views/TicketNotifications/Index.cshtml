@model IEnumerable<Zach_BugTracker.Models.TicketNotifications>

@{
    ViewBag.Title = "Index";
}


<div class="container">
    <h2 align="center">Index</h2>

    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Recipient")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket.SubmitterId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotificationBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Recipient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Submitter.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationBody)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsRead)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

    </table>
</div>
